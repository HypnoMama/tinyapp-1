<!DOCTYPE html>
<html lang="en">
  <%- include ("partials/_head") %>
  <body>
    <%- include ("partials/_header") %>
    <!-- TODO: Add onsubmit function to check for password -->
    <!-- match that stops submission and displays an error -->
    <!-- message briefly. -->
    <div class="card bg-light">
      <article class="card-body mx-auto" style="max-width: 400px;">
        <h4 class="card-title mt-3 text-center">Login</h4>
        <form class="form" action="/login" method="POST">
        
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
            </div>
            <input name="email" class="form-control" placeholder="Enter email" type="email" required>
          </div> <!-- form-group// -->
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <input name="password" class="form-control" placeholder="Create password" type="password" required>
          </div> <!-- form-group// -->
                                               
          <div class="form-group">
              <button type="submit" class="btn btn-outline-success btn-block"> Login</button>
          </div> <!-- form-group// -->      
          <p class="text-center">Don't have an account? <a href="/register">Register</a> </p>                                                                 
      </form>
      </article>
      </div> <!-- card.// -->
      
      </div> 
      <%- include ("partials/_footer") %>
  </body>
</html>
